generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model rootAPIKey {
  id String @id @default(cuid())
  userId String @unique
  hash String @unique 
  salt String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model userAPIKey {
  id String @id @default(cuid())
  createdByUser String 
  hash String @unique
  salt String 
  prefix String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
